// ========================================
// ğŸ“š STEP 5: THE renderTasks FUNCTION
// ========================================
/*
ğŸ¯ WHAT YOU'LL LEARN:
How to create HTML elements and display them on the page.

ğŸ“– EXPLANATION:
"Render" = Display on screen

Your tasks are stored in the array, but that's just JavaScript's memory.
Users can't SEE JavaScript's memory!

We need to CREATE HTML elements like:
<li class="task-item">
    <input type="checkbox">
    <span>Buy milk</span>
    <button>Delete</button>
</li>

ğŸ”§ KEY TOOLS:
- document.createElement('li') = Make a new <li> element
- element.textContent = 'text' = Put text inside it
- element.className = 'task-item' = Give it a CSS class
- parent.appendChild(child) = Add it to the page
*/

// âœï¸ TODO 16: Create the renderTasks function
function renderTasks() {
    
    // --- PART A: CLEAR THE LIST ---
    /*
    ğŸ“– EXPLANATION:
    innerHTML gets or sets the HTML inside an element.
    
    Setting it to '' (empty) clears everything inside.
    
    WHY? We're going to rebuild the ENTIRE list fresh.
    If we don't clear it, we'd keep adding duplicates!
    */
    
    // âœï¸ TODO 17: Clear the taskList
    // WHAT TO WRITE: taskList.innerHTML = '';
    // WHY: To remove old tasks before showing updated list
    
    
    
    // --- PART B: CHECK IF EMPTY ---
    /*
    ğŸ“– EXPLANATION:
    .length tells you how many items are in an array.
    
    Example:
    ['a', 'b', 'c'].length = 3
    [].length = 0 (empty array)
    */
    
    // âœï¸ TODO 18: If tasks array is empty, show a message
    // WHAT TO WRITE:
    // if (tasks.length === 0) {
    //     taskList.innerHTML = '<li class="empty-state">No tasks yet. Add one above!</li>';
    //     return;
    // }
    // WHY: Better UX - show friendly message instead of blank space
    
    
    
    // --- PART C: LOOP THROUGH TASKS ---
    /*
    ğŸ“– EXPLANATION:
    .forEach() runs a function for EACH item in an array.
    
    Example:
    ['apple', 'banana', 'orange'].forEach(function(fruit) {
        console.log(fruit);
    });
    
    This prints:
    apple
    banana
    orange
    
    For each task, we'll create HTML elements to display it.
    */
    
    // âœï¸ TODO 19: Loop through each task
    // WHAT TO WRITE: tasks.forEach(function(task) {
    // Don't forget the closing }); at the end!
    
    tasks.forEach(function(task) {
        
        // âœï¸ TODO 20: Create a list item (li) element
        // WHAT TO WRITE: const li = document.createElement('li');
        
        
        
        // âœï¸ TODO 21: Give it the 'task-item' class
        // WHAT TO WRITE: li.className = 'task-item';
        
        
        
        // âœï¸ TODO 22: If task is completed, add 'completed' class
        // WHAT TO WRITE:
        // if (task.completed) {
        //     li.classList.add('completed');
        // }
        
        
        
        // âœï¸ TODO 23: Create the checkbox (copy this)
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.className = 'checkbox';
        checkbox.checked = task.completed;
        checkbox.addEventListener('change', function() {
            toggleTask(task.id);
        });
        
        
        // âœï¸ TODO 24: Create the text span
        // WHAT TO WRITE:
        // const span = document.createElement('span');
        // span.className = 'task-text';
        // span.textContent = task.text;
        
        
        
        // âœï¸ TODO 25: Create the delete button
        // WHAT TO WRITE:
        // const deleteBtn = document.createElement('button');
        // deleteBtn.className = 'delete-btn';
        // deleteBtn.textContent = 'Delete';
        // deleteBtn.addEventListener('click', function() {
        //     deleteTask(task.id);
        // });
        
        
        
        // âœï¸ TODO 26: Add all elements to the li
        // WHAT TO WRITE:
        // li.appendChild(checkbox);
        // li.appendChild(span);
        // li.appendChild(deleteBtn);
        
        
        
        // âœï¸ TODO 27: Add the li to the taskList
        // WHAT TO WRITE: taskList.appendChild(li);
        
        
    }); // â† Closing brace for forEach
    
} // â† Closing brace for renderTasks


// ========================================
// ğŸ“š STEP 6: TOGGLE TASK (Mark Complete)
// ========================================
/*
ğŸ¯ WHAT YOU'LL LEARN:
How to change a task's completed status.

ğŸ“– EXPLANATION:
"Toggle" = Switch between two states (on/off, true/false)

.map() creates a NEW array by transforming each item.

We use it to find the task with matching ID and change it.
*/

// âœï¸ TODO 28: Create the toggleTask function (copy this)
function toggleTask(id) {
    tasks = tasks.map(function(task) {
        if (task.id === id) {
            task.completed = !task.completed; // ! means "opposite"
        }
        return task;
    });
    renderTasks();
    updateStats();
}


// ========================================
// ğŸ“š STEP 7: DELETE TASK
// ========================================
/*
ğŸ¯ WHAT YOU'LL LEARN:
How to remove an item from an array.

ğŸ“– EXPLANATION:
.filter() creates a NEW array with only items that pass a test.

We keep every task EXCEPT the one with matching ID.
*/

// âœï¸ TODO 29: Create the deleteTask function (copy this)
function deleteTask(id) {
    tasks = tasks.filter(function(task) {
        return task.id !== id; // !== means "not equal to"
    });
    renderTasks();
    updateStats();
}


// ========================================
// ğŸ“š STEP 8: UPDATE STATS
// ========================================
/*
ğŸ¯ WHAT YOU'LL LEARN:
How to count and display statistics.

ğŸ“– EXPLANATION:
Updates the numbers at the top (Total, Completed, Remaining).
*/

// âœï¸ TODO 30: Create the updateStats function (copy this)
function updateStats() {
    const total = tasks.length;
    const completed = tasks.filter(t => t.completed).length;
    const remaining = total - completed;
    
    totalTasksEl.textContent = total;
    completedTasksEl.textContent = completed;
    remainingTasksEl.textContent = remaining;
}

// Initialize stats
updateStats();


